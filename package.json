{
  "name": "remember-stuff",
  "version": "1.0.0",
  "private": true,
  "description": "Tutorial app that displays various EmberJS stuff for reference.",
  "license": "MIT",
  "author": "Michael Chadwick (michael.chadwick@ucsf.edu)",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "ember build --environment=production",
    "lint": "pnpm run --parallel \"/^lint:(hbs|js|css)$/\"",
    "lint:js": "pnpm run --parallel lint:js",
    "lint:hbs": "pnpm run --parallel lint:hbs",
    "lint:css": "pnpm run --parallel lint:css",
    "lint:fix": "pnpm run --parallel lint:fix",
    "start": "pnpm --filter frontend exec ember serve",
    "test": "pnpm --filter frontend run test",
    "test:percy": "npx percy exec -- ember test",
    "prepare": "husky"
  },
  "engines": {
    "node": ">= 20",
    "yarn": "use pnpm",
    "npm": "use pnpm"
  },
  "devDependencies": {
    "husky": "^9.0.11"
  }
}
