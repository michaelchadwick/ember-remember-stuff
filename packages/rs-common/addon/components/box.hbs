{{#if (has-block)}}
  {{!-- template-lint-disable no-at-ember-render-modifiers --}}
  <div
    class="box has-block"
    id={{unique-id}}
    {{did-insert this.getElementAttrs}}
    {{on-resize this.updateElementDims}}
    data-test-box
    ...attributes
  >
    <h3>{{t "components.box.head"}} ({{this.dimensionDisplay}})</h3>
    <div class="box-id">{{this.id}}</div>

    <div class="box-text">
      {{yield this.text}}
    </div>
  </div>
{{else}}
  <div
    class="box no-block"
    id={{unique-id}}
    {{did-insert this.getElementAttrs}}
    {{on-resize this.updateElementDims}}
    data-test-box
    ...attributes
  >
    <h3>{{t "components.box.head"}} ({{this.dimensionDisplay}})</h3>
    <div class="box-id">{{this.id}}</div>
    <div class="box-text">
      {{ this.text }}
    </div>
  </div>
{{/if}}
