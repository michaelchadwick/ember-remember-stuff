{{! ember-cli-head }}
<HeadLayout />

<div class="application-wrapper">
  <TomsterPopper />

  <Layout::Ribbon @position="right" @content={{this.appEnv}} />

  <header>
    <Layout::NavBar />
  </header>

  <main>
    {{#if this.showErrorDisplay}}
      <ErrorDisplay @errors={{this.errors}} @clearErrors={{this.clearErrors}} />
    {{else}}
      {{outlet}}
    {{/if}}
  </main>
</div>

<Layout::Footer
  @rsVersionTag={{this.rsVersionTag}}
  @apiVersionTag={{this.apiVersionTag}}
  @frontendVersionTag={{this.frontendVersionTag}}
/>