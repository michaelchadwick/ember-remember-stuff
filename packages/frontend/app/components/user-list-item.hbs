{{! template-lint-disable no-invalid-interactive }}
<tr
  class="user-list-item{{if this.selected ' selected'}}"
  {{on "click" this.handleClick}}
  data-test-user-list-item
>
  <td class="text-left" colspan="1" data-test-user-selected>
    {{#if this.selected}}
      <FaIcon @icon="check" />
    {{/if}}
  </td>
  <td class="text-left" colspan="1" data-test-user-id>
    {{@user.id}}
  </td>
  <td class="text-left" colspan="1" data-test-user-full-name>
    <LinkTo @route="user" @model={{@user}} data-test-user-link>
      <UserNameInfo @user={{@user}} />
    </LinkTo>
  </td>
  <td class="text-left" colspan="1" data-test-user-email>
    {{@user.email}}
  </td>
  <td class="text-left" colspan="1" data-test-user-root>
    {{#if @user.root}}
      <FaIcon @icon="shield" />
    {{/if}}
  </td>
</tr>