<div class="user-list" data-test-user-list ...attributes>
  <div class="user-list-selected-user">
    {{#if this.selectedUser}}
      <span>{{this.selectedUser.fullName}}</span>
    {{else}}
      <span>{{t "general.noSelectedUser"}}</span>
    {{/if}}
  </div>

  <table>
    <thead>
      <tr>
        <th class="user-checked" colspan="1">
          <FaIcon @icon="check" />
        </th>
        <th class="user-id" colspan="1">
          {{t "general.id"}}
        </th>
        <th class="user-fullname" colspan="1">
          {{t "general.fullName"}}
        </th>
        <th class="user-email" colspan="1">
          {{t "general.email"}}
        </th>
        <th class="user-root" colspan="1">
          <FaIcon @icon="shield" />
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each @users as |user|}}
        <UserListItem @user={{user}} @onSelectUser={{this.selectUser}} />
      {{/each}}
    </tbody>
  </table>
</div>