<div class="box-gallery">
  <h2>{{t "components.boxGallery.head"}}</h2>

  <div class="box-generator">
    <button
      type="button"
      id="btn-generate-new"
      {{on "click" this.generateNewBox}}
      disabled={{this.isGenerating}}
    >
      {{t "components.boxGallery.genNewButton"}}
      {{#if this.isGenerating}}
        <LoadingSpinner />
      {{/if}}
    </button>
  </div>

  <div class="boxes">
    {{#each this.boxes as |box|}}
      {{#if box.block}}
        <Box>
          {{box.block}}
        </Box>
      {{else}}
        <Box @text={{box.text}} contenteditable="true" />
      {{/if}}
    {{/each}}
  </div>
</div>
